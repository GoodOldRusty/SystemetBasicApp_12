    <Button
        android:id="@+id/yes_button"
        android:layout_width="326dp"
        android:layout_height="45dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="68dp"
        android:background="@color/colorPrimary"
        android:text="@string/yes_answer"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:fontFamily="@font/futura_bold_font"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@id/no_button"
        app:layout_constraintEnd_toEndOf="@id/divider"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"></Button>


    <Button
        android:id="@+id/no_button"
        android:layout_width="326dp"
        android:layout_height="45dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="300dp"
        android:background="@color/colorPrimary"
        android:text="@string/no_answer"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:fontFamily="@font/futura_bold_font"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/divider"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="370dp"
        android:layout_height="3dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="18dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/no_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yes_button"
        app:layout_constraintVertical_bias="0.647" />

</android.support.constraint.ConstraintLayout>