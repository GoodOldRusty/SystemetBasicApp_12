<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".PartyActivity">

    <TextView
        android:id="@+id/what_type_of_party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/futura_medium_bt"
        android:text="@string/what_type_of_party"
        android:textColor="#482f40"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/new_year_party_button"
        android:layout_width="185dp"
        android:layout_height="31dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="252dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/futura_medium_bt"
        android:text="@string/new_year_party_theme"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#482f40"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/park_party_button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/exam_party_button"
        android:layout_width="185dp"
        android:layout_height="31dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="120dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/futura_medium_bt"
        android:text="@string/exam_party_theme"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#482f40"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_party_button" />

    <Button
        android:id="@+id/home_party_button"
        android:layout_width="185dp"
        android:layout_height="31dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="120dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/futura_medium_bt"
        android:text="@string/home_party_theme"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#482f40"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/what_type_of_party" />

    <Button
        android:id="@+id/park_party_button"
        android:layout_width="185dp"
        android:layout_height="31dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="120dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/futura_medium_bt"
        android:text="@string/park_party_theme"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#482f40"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exam_party_button" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="55dp"
        android:layout_height="46dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="home_icon"
        app:layout_constraintEnd_toStartOf="@+id/home_party_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/what_type_of_party"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="55dp"
        android:layout_height="46dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="park_icon"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/park_party_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/what_type_of_party"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/park" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="55dp"
        android:layout_height="46dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="348dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="newyear_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/new_year_party_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/what_type_of_party"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fireworks" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="55dp"
        android:layout_height="46dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="graduation_icon"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/exam_party_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/what_type_of_party"
        app:layout_constraintVertical_bias="0.09"
        app:srcCompat="@drawable/graduation2" />

</android.support.constraint.ConstraintLayout>